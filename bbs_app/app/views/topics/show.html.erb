<br><br>
<%= link_to 'ホーム', topics_path %>


<div class="row">
<br><br><br>
<div class="col-xs-5 col-sm-5 col-md-5 col-lg-8">
<table class="table table-condensed">
  <tbody>
        <tr  class="topicshow">
          <td colspan="2" class="topic_td">
          <b><%= @topic.title %></b> <%= @topic.name %> <%= @topic.created_at %>
        </td>
          <tr class="topicshow">
          <td class="topic_td">
            <% if @topic.image? %>
              <%= image_tag @topic.image.url %>
            <% end %>
          </td>
          <td class="topic_td"><%= @topic.content %></td>
          </tr>
          <tr class="topicshow">
            <% if user_signed_in? %>
                  <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
                  <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      </tr>
      <% end %>
  </tbody>
</table>
</div>

<div class="col-xs-5 col-sm-5 col-md-5 col-lg-8">
<table class="table table-condensed">
  <tbody>
    <% @posts.each do |post| %>
        <tr  class="topicshow">
          <td colspan="2">
          <%= post.id %>　<%= post.name %>　<%= post.created_at %>
        </td>
          <tr class="topicshow"  colspan="2">
            <% if post.image? %>
              <td><%= image_tag post.image.url %></td>
              <td><%= post.content %></td>
            <% else %>
            <td><%= post.content %></td>
            <% end %>
          </tr>
          <tr class="topicshow">
            <% if user_signed_in? %>
                  <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
                  <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      </tr>
      <% end %>
      <% end %>
  </tbody>
</table>
</div>

<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 topicform">
  <p class="notice"><%= notice %></p>
   <p class="alert"><%= alert %></p>
<%= form_with(model: @post, local: true) do |form| %>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, id: :post_content %>
  </div>

    <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :post_name %>
  </div>

    <div class="field">
  <%= form.label :image %>
<%= form.file_field :image %>
</div>

<%= form.hidden_field :topic_id %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

</div>
</div>
