<br><br>
<div class="row">
    <br><br><br>
    <div class="col-xs-5 col-sm-5 col-md-5 col-lg-8">
        <table class="table table-condensed">
            <tbody>
                <tr class="topicshow">
                    <td colspan="2" class="topic_td">
                        <b>
                            <%= @topic.title %></b>
                        <%= @topic.name %>
                        <%= @topic.created_at %>
                    </td>
                <tr class="topicshow">
                    <td class="topic_td col-xs-3 col-sm-3 col-md-3 col-lg-3">
                        <% if @topic.image? %>
                        <%= image_tag @topic.image.url %>
                        <% end %>
                    </td>
                    <td class="topic_td">
                          <%= simple_format(@topic.content) %>
                    </td>
                </tr>
                <tr class="topicshow">
                    <% if user_signed_in? %>
                    <td>
                        <%= link_to 'Edit', edit_topic_path(topic) %>
                    </td>
                    <td>
                        <%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %>
                    </td>
                </tr>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>

    <div class="col-xs-5 col-sm-5 col-md-5 col-lg-8">
                <% @posts.each do |post| %>
        <table class="table table-condensed">
            <tbody>
                <tr class="postshow">
                    <td colspan="2" class="topic_td">
                        <%= post.id %>　
                        <%= post.name %>　
                        <%= post.created_at %>
                    </td>
                    <% if post.image? %>
                <tr class="postshow">
                    <td class="topic_td col-xs-3 col-sm-3 col-md-3 col-lg-3">
                        <%= image_tag post.image.url %>
                    </td>
                    <td class="topic_td">
                        <%= simple_format(post.content) %>
                    </td>
                </tr>
                    <% else %>
                    <tr class="postshow">
                    <td class="topic_td">
                        <%= simple_format(post.content) %>
                    </td>
                    </tr>
                <% end %>
                <tr class="postshow">
                <% if user_signed_in? %>
                    <td>
                        <%= link_to 'Edit', edit_topic_path(topic) %>
                    </td>
                    <td>
                        <%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %>
                    </td>
                </tr>
                <% end %>
                </tr>
            </tbody>
        </table>
                <% end %>
    </div>



    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 topicform">
        <p class="notice">
            <%= notice %>
        </p>
        <p class="alert">
            <%= alert %>
        </p>
        <%= form_with(model: @post, local: true) do |form| %>
        <div class="field">
            <%= form.label :内容 %>
            <%= form.text_area :content, id: :post_content %>
        </div>
        <div class="field">
            <%= form.label :名前 %>
            <%= form.text_field :name, id: :post_name %>
        </div>
        <div class="field">
            <%= form.label :画像 %>
            <%= form.file_field :image %>
        </div>
        <%= form.hidden_field :topic_id %>
        <div class="actions">
            <%= form.submit %>
        </div>
        <% end %>
    </div>
</div>
