
  <h1>BBS</h1>
  <%= link_to 'ホーム', topics_path %>
<% unless user_signed_in? %>
<%= link_to '管理ユーザー登録', new_user_registration_path %>
<%= link_to '管理ユーザーログイン', new_user_session_path %>
<% else %>
<%= link_to 'ログアウト', destroy_user_session_path, method: :delete  %>
<% end %>

<br>
<br>
<br>

<div class="row">
<div class="col-xs-5 col-sm-5 col-md-5 col-lg-8">
<table class="table table-condensed table-hover">
  <tbody>
    <%= will_paginate %>
    <% @topics.each do |topic| %>
        <tr onclick='window.location="<%= '/topics/' + topic.id.to_s %>"' role="link" class="topicshow">
      	<td>
          <b><%= topic.title %></b>
          <%= topic.name %>
          <%= topic.created_at %>
          <% if topic.image? %>
          <%= image_tag topic.image.url %>
          <% end %>
        </td>
        <td><%= topic.content.truncate(50) %></td>
        </tr>
        <% if user_signed_in? %>
        <tr>
        <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
        <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>

      <% end %>
    <% end %>
    <%= will_paginate %>

  </tbody>
</table>
</div>
<br>

<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 topicform" data-spy="affix" data-offset-top="270">
	  	  <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
<%= render 'form', topic: @newtopic %>
</div>
</div>
