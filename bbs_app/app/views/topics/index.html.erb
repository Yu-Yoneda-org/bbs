<p id="notice"><%= notice %></p>

<h1>Topics</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Name</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= will_paginate %>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= link_to topic.title, topics_show_path(topic.id) %></td>
        <td><%= topic.name %></td>
        <td><%= topic.content %></td>
        <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
        <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%= will_paginate %>
  </tbody>
</table>

<br>

<%= render 'form', topic: @topic %>
