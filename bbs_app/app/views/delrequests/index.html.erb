<p id="notice"><%= notice %></p>

<h1>削除依頼</h1>

<div class="row">
<div class="col-xs-5 col-sm-5 col-md-5 col-lg-8">
  <% @delrequests.each do |delrequest| %>
<table class="table table-condensed table-hover">
  <tbody>
        <tr class="topicshow">
      	<td colspan="2">
          <%= delrequest.address %> の <%= delrequest.del_id %>
        </td>
        </tr>

        <tr class="topicshow">
          <td><%= delrequest.reason %></td>
        </tr>
        <tr class="topicshow">
          <td><%= delrequest.created_at %></td>
        </tr>

        <% if user_signed_in? %>
        <tr>
        <td><%= link_to 'Edit', edit_delrequest_path(delrequest) %></td>
        <td><%= link_to 'Destroy', delrequest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
  </tbody>
      <% end %>
</table>
    <% end %>
</div>

<br>

<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 topicform" data-spy="affix" data-offset-top="270">
	  	  <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
<%= render 'form', delrequest: @delrequest %>
</div>
